{
  "info": {
    "_postman_id": "9e74ff9b-3b7e-4b5f-8d9e-8b7c9d1f8d0a",
    "name": "Roomie_BE",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4003"
    },
    {
      "key": "email",
      "value": "user@example.com"
    },
    {
      "key": "password",
      "value": "password123"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "previousToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "roomId",
      "value": ""
    },
    {
      "key": "inviteCode",
      "value": "ROOM-ABC123"
    },
    {
      "key": "expenseId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "const priorToken = pm.environment.get('token');",
              "if (priorToken) pm.environment.set('previousToken', priorToken);",
              "if (data?.token) pm.environment.set('token', data.token);",
              "if (data?.user?.id) pm.environment.set('userId', data.user.id);",
              "if (data?.user?.roomId) pm.environment.set('roomId', data.user.roomId);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": "{{baseUrl}}/api/login"
      }
    },
    {
      "name": "Get Rooms",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms"
      }
    },
    {
      "name": "Join Room (Invite Code)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"inviteCode\": \"{{inviteCode}}\"\n}"
        },
        "url": "{{baseUrl}}/api/rooms/join"
      }
    },
    {
      "name": "Create Room",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "if (data?.id) pm.environment.set('roomId', data.id);",
              "if (data?.inviteCode) pm.environment.set('inviteCode', data.inviteCode);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My Room\",\n  \"inviteCode\": \"\"\n}"
        },
        "url": "{{baseUrl}}/api/rooms"
      }
    },
    {
      "name": "Get Room",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}"
      }
    },
    {
      "name": "Update Room",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Room Name\"\n}"
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}"
      }
    },
    {
      "name": "Regenerate Invite Code",
      "request": {
        "method": "POST",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}/invite-code"
      }
    },
    {
      "name": "Delete Room",
      "request": {
        "method": "DELETE",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}"
      }
    },
    {
      "name": "Get Roommates",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}/roommates"
      }
    },
    {
      "name": "Create Roommate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Roommate\",\n  \"email\": \"new-roommate@example.com\",\n  \"password\": \"password123\",\n  \"roomId\": \"{{roomId}}\",\n  \"isManager\": false\n}"
        },
        "url": "{{baseUrl}}/api/roommates"
      }
    },
    {
      "name": "Get Expenses",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}/expenses"
      }
    },
    {
      "name": "Create Expense",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "if (data?.id) pm.environment.set('expenseId', data.id);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Groceries\",\n  \"amount\": 42.5,\n  \"category\": \"Food\",\n  \"date\": \"2025-01-08T00:00:00.000Z\",\n  \"addedById\": \"{{userId}}\"\n}"
        },
        "url": "{{baseUrl}}/api/rooms/{{roomId}}/expenses"
      }
    },
    {
      "name": "Update Expense Status",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"approved\"\n}"
        },
        "url": "{{baseUrl}}/api/expenses/{{expenseId}}/status"
      }
    }
  ]
}
